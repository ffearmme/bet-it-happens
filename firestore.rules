rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Robust Admin Check
    // 1. Checks if Auth exists
    // 2. Checks if Email contains 'admin' (Safest fallback)
    // 3. Checks if Firestore User doc exists AND has role == 'admin'
    function isAdmin() {
      return request.auth != null && (
        (request.auth.token.email != null && request.auth.token.email.lower().matches('.*admin.*')) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // EVENTS
    match /events/{eventId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      // Allow updates if Admin OR if it's just a stats/comment update (which users might trigger via cloud functions or client logic if applicable, essentially relaxed for betting flow)
      allow update: if isAdmin() || (
        request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastComment', 'stats'])
      );
    }
    
    // USERS
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // BETS
    match /bets/{betId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // COMMENTS
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    // NOTIFICATIONS
    match /notifications/{notificationId} {
      // Users can read their own
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Admins can create any notification (e.g. Results)
      // Users can create 'referral' notifications (triggered during signup)
      allow create: if isAdmin() || 
                   (request.auth != null && request.resource.data.type == 'referral');
      
      // Users can update their own (for marking as read)
      allow update: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);

      allow delete: if isAdmin();
    }

    // IDEAS
    match /ideas/{ideaId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // PARLAYS
    match /parlays/{parlayId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
         isAdmin() ||
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['wagersCount', 'totalPool'])
      );
      allow delete: if isAdmin();
    }

    // SYSTEM
    match /system/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
